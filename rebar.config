{deps, [
        {sext, {git, "https://github.com/uwiger/sext.git", {tag, "1.4.1"}}},
        {mochiweb, {git, "https://github.com/basho/mochiweb.git", {tag, "2.12.1+riak.3.0.4"}}}
       ]}.
