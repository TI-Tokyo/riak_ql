{cover_enabled, false}.

{erl_opts, [warnings_as_errors]}.

{xref_warnings, false}.

{eunit_opts, [no_tty]}.

%% == escriptize ==
{escript_emu_args, "%%! -escript main riak_ql_cmd -smp disable +A 0\n"}.
